<Page x:Class="_8Banner.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_8Banner"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="HomePage">

	<ScrollViewer>
		<StackPanel x:Name="mainPanel">
			<WrapPanel x:Name="bannerPanel" HorizontalAlignment="Center" VerticalAlignment="Top" />
			<TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,100,0,10" TextWrapping="Wrap" Text="Enter a board:" VerticalAlignment="Top" FontSize="16"/>
			<TextBox x:Name="boardBox" HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="16" KeyDown="boardBox_Enter" HorizontalScrollBarVisibility="Auto" TextAlignment="Center"/>
			<Button x:Name="btnStart" Content="Start" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top" Width="80" Click="button_Click" Height="25"/>
		</StackPanel>
	</ScrollViewer>

</Page>
